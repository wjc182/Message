<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TalkActivity">
<androidx.appcompat.widget.Toolbar
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toolbar"
    android:background="#9FCEFD"
    />
        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:id="@+id/te_mess"
            />
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/te_mess"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/ed_message"
        app:layout_constraintRight_toLeftOf="@id/send_message"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/te_mess"
        app:layout_constraintLeft_toRightOf="@id/ed_message"
        android:id="@+id/send_message"
        app:layout_constraintRight_toRightOf="parent"
        android:text="发送消息"
        />

</androidx.constraintlayout.widget.ConstraintLayout>