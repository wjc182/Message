<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SharedActivity">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/shared_friends"
        android:id="@+id/rew_shared"

        />
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/shared_friends"
    app:layout_constraintTop_toBottomOf="@id/rew_shared"
    app:layout_constraintBottom_toBottomOf="@id/find_friends"
    />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/find_friends"
        app:layout_constraintTop_toBottomOf="@id/jump_talk"
        android:text="查找好友"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jump_talk"
        app:layout_constraintTop_toBottomOf="@id/shared_friends"
        android:text="发起聊天"
        />

</androidx.constraintlayout.widget.ConstraintLayout>